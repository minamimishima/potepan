<h3>ユーザー詳細</h3>

<table>
  <tr>
    <th>名前</th>
    <th><%= @user.name %></th>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <th><%= @user.email %></th>
  </tr>
  <tr>
    <th>年齢</th>
    <th><%= @user.age %></th>
  </tr>
  <tr>
    <th>一言紹介</th>
    <th><%= @user.introduction %></th>
  </tr>
</table>

<h3>新規投稿</h3>

<%= form_with(model: @post, url: posts_path, local: true) do |f| %>
  <table>
    <tr>
      <th><%= f.label :content,"投稿内容" %></th>
      <td><%= f.text_area :content,class:"post-content" %></td>
    </tr>
  </table>
  <%= f.hidden_field :user_id, value: @user.id %>
  <div>
    <ul>
      <li><%= f.submit "投稿を完了する" %></li>
    </ul>
  </div>
<% end %>

<div>
  <ul>
    <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
  </ul>
</div>
